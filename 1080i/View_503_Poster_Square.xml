<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
    <include name="View_503_Poster_Square">
        <description>List View (id=503)</description>
        <control type="group">
            <include>Animation.Common</include>
            <visible>Control.IsVisible(503)</visible>
            <control type="fixedlist" id="503">
                <oninfo condition="Container.Content(games)">ActivateWindow(1129)</oninfo>
                <visible>Container.Content(games) | Container.Content(musicvideos) | Container.Content(albums)| Window.IsActive(programs) | Container.Content(addons) | Container.Content(artists)</visible>
                <posy>259</posy> <!--default is 309-->
                <posx>-190</posx>
                <width>2300</width>
                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <ondown>60</ondown>
                <onleft>503</onleft>
                <onright>503</onright>
                <focusposition>1</focusposition>
                <preloaditems>0</preloaditems>
                <pagecontrol>60</pagecontrol>
                <orientation>horizontal</orientation>
                <viewtype label="538">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>
                <itemlayout width="270">
                    <control type="group">

                        <animation effect="Conditional" condition="true">
                            <effect type="zoom" end="60" time="0" center="213,452" />
                        </animation>
                        <control type="image">
                            <centertop>PosterW</centertop>
                            <width>PosterW</width>
                            <height>48</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>diffuse/shadowspot.png</texture>
                        </control>
                        <control type="image">
                            <width>PosterW</width>
                            <height>PosterW</height>
                            <texture border="5" colordiffuse="Dark1">common/box.png</texture>
                        </control>
                        <control type="image">
                            <visible>!Container.Content(games)</visible>
                            <width>PosterW</width>
                            <height>PosterW</height>
                            <fadetime>100</fadetime>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/listposter.png" background="true">$VAR[PosterImage]</texture>
                        </control>
                        
                        <!--CHANGES-->
                        <control type="image">
                            <visible>Container.Content(games)</visible>
                            <width>PosterW</width>
                            <height>PosterW</height>
                            <fadetime>100</fadetime>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/listposter.png" background="true">$VAR[ThumbImage]</texture>
                        </control>
                        <!--END-->
                        
                        <control type="group">
                            <visible>!Container.Content(games) + !String.IsEqual(ListItem.Label,..)</visible>
                            <visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>
				
                            <control type="image">
                                <left>379</left>
                                <centertop>32</centertop>
                                <width>32</width>
                                <height>32</height>
                                <aspectratio aligny="top">keep</aspectratio>
                                <texture>$VAR[PercentWatched]</texture>
                            </control>
                        </control>
		
	        <!--CHANGED-->
		<control type="group">
		<visible>Container.Content(games)</visible>	 
		   <control type="image">
                        <left>379</left>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture colordiffuse="$VAR[ColorHighlight]">$VAR[PosterPercentWatchedBacking]</texture>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                    <control type="image">
                        <left>379</left>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture>$VAR[PosterPercentWatched]</texture>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control> 
		 </control>
		<!--END-->
			    
                        <control type="image">
                            <left>-24</left>
                            <top>-24</top>
                            <width>PosterShadowW</width>
                            <height>PosterShadowW</height>
                            <texture border="32">common/shadow-24.png</texture>
                        </control>
                    </control>
                </itemlayout>

                <focusedlayout width="300">
                    <control type="group">
                        <posy>120</posy>
                        <animation condition="Container(503).OnNext | Container(503).OnPrevious" effect="zoom" start="60" end="100" delay="0" time="350" tween="sine" easing="out" center="213,276">Focus</animation>
                        <animation condition="Container(503).OnNext | Container(503).OnPrevious" effect="zoom" start="100" end="60" delay="0" time="250" tween="sine" easing="out" center="213,276">UnFocus</animation>
						<control type="image">
							<top>PosterW</top>
							<width>PosterW</width>
							<height>PosterW</height>
							<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
							<texture flipy="true" diffuse="diffuse/listposter-ref.png" background="true">$VAR[PosterImage]</texture>
							<visible>Skin.HasSetting(show.reflections)</visible>
						</control>
                        <control type="image">
                            <centertop>PosterW</centertop>
                            <width>PosterW</width>
                            <height>48</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>diffuse/shadowspot.png</texture>
                        </control>
                        <control type="image">
                            <width>PosterW</width>
                            <height>PosterW</height>
                            <texture border="5" colordiffuse="Dark1">common/box.png</texture>
                        </control>
                        <control type="image">
                            <width>PosterW</width>
                            <height>PosterW</height>
                            <fadetime>100</fadetime>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/listposter.png" background="true">$VAR[PosterImage]</texture>
                            <visible>!Container.Content(games)</visible>
                        </control>
                        
                        <!--CHANGES-->
                        <control type="image">
                            <width>PosterW</width>
                            <height>PosterW</height>
                            <fadetime>100</fadetime>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/listposter.png" background="true">$VAR[ThumbImage]</texture>
                            <visible>Container.Content(games)</visible>
                        </control>
                        <!--END-->
                        
                        <control type="group">
                            <visible>!String.IsEqual(ListItem.Label,..) + !Container.Content(games)</visible>
                            <visible>String.IsEqual(ListItem.Overlay,OverlayWatched.png)</visible>

                            <control type="image">
                                <left>379</left>
                                <centertop>32</centertop>
                                <width>32</width>
                                <height>32</height>
                                <aspectratio aligny="top">keep</aspectratio>
                                <texture>$VAR[PercentWatched]</texture>
                            </control>
                        </control>
		
		<!--CHANGED-->
		<control type="group">
		<visible>Container.Content(games)</visible>	 
		   <control type="image">
                        <left>379</left>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture colordiffuse="$VAR[ColorHighlight]">$VAR[PosterPercentWatchedBacking]</texture>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control>
                    <control type="image">
                       <left>379</left>
                        <centertop>32</centertop>
                        <width>32</width>
                        <height>32</height>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture>$VAR[PosterPercentWatched]</texture>
                        <visible>!String.IsEqual(ListItem.Label,..)</visible>
                    </control> 
		 </control>   
		<!--END-->	    
			    
                        <control type="image">
                            <left>-24</left>
                            <top>-24</top>
                            <width>PosterShadowW</width>
                            <height>PosterShadowW</height>
                            <texture border="32">common/shadow-24.png</texture>
                        </control>

                    </control>
                </focusedlayout>

            </control>

            <control type="group">
                <animation effect="fade" condition="!Control.HasFocus(60)" time="200" start="100" end="0">Conditional</animation>
                <include>Furniture_Scrollbar_Horizontal</include>
            </control>

            <control type="grouplist">
                <left>540</left>
                <right>SidePad</right>
                <top>720</top><!--default is 770-->
                <orientation>vertical</orientation>
                <visible>![Container(503).OnNext | Container(503).OnPrevious]</visible>
                <animation effect="fade" start="0" end="100" delay="450" time="250" reversible="false">Visible</animation>
                <control type="label">
                    <visible>!Container.Content(games)</visible>
                    <font>SmallBold</font>
                    <label>$VAR[PosterSquareLabel1]</label>
                    <textcolor>Dark1</textcolor>
                    <height>35</height>
                    <aligny>top</aligny>
                </control>

                <control type="label">
				<visible>!Container.Content(games)</visible>
                    <font>Tiny</font>
                    <label>$VAR[PosterSquareLabel2]</label>
                    <textcolor>Dark1</textcolor>
                    <height>42</height>
                    <aligny>top</aligny>
                </control>
                
                <!--CHANGES-->
				<control type="label">
                    <visible>Container.Content(games)</visible>
                    <font>SmallBold</font>
                    <label>$INFO[ListItem.Label]$INFO[ListItem.Year, (,)]</label>
                    <textcolor>Dark1</textcolor>
                    <height>35</height>
                    <aligny>top</aligny>
                </control>
 
                <control type="label">
                    <visible>Container.Content(games)</visible>
                    <font>Tiny</font>
                    <label>$VAR[LabelGenre]$INFO[ListItem.Studio,  •  ]</label>
                    <textcolor>Dark1</textcolor>
                    <height>42</height>
                    <aligny>top</aligny>
                </control>

		<control type="textbox">
                    <visible>Container.Content(games) | Container.Content(artists) | Container.Content(musicvideos) | Container.Content(albums)</visible>
                    <font>Tiny</font>
                    <label>$VAR[LabelPlotBox]</label>
                    <textcolor>Dark2</textcolor>
                    <height>68</height>
                    <align>justify</align>
                </control>
	   <!--END-->
  
            </control>
        </control>
    </include>
</includes>

